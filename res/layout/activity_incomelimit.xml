<?xml version="1.0" encoding="utf-8"?>
     <LinearLayout
         xmlns:android="http://schemas.android.com/apk/res/android"
    	 android:id="@+id/incomelimitDialog"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginTop="60dp"
         android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/textViewAccountIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monthlyincome"
		             android:textStyle="bold"    
		             android:textColor="@color/Blue"                 
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/editTextSetIncome"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:ems="10"
                  android:background="@drawable/rectanglebox"                
                android:layout_marginLeft="45dp"
                android:inputType="numberDecimal" >
				
                <requestFocus />
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textViewAccountIncomeOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/otherincome"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Blue"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextSetIncomeOther"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectanglebox"
                android:layout_marginLeft="72dp"
                android:ems="10"
                android:inputType="numberDecimal" />

        </LinearLayout>
        		
	</LinearLayout>

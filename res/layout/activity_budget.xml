<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/budgetbackgroud" >
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imageButtonIncome"
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:background="@color/menu_glow"
            android:src="@drawable/income" />

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textViewIncomeBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/income"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/menu_glow"
                android:textStyle="bold" />
            <ProgressBar
                android:id="@+id/progressBarIncome"
                android:max="100"
                android:progress="0"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/incomeprogressbar"/>
            <TextView
                android:id="@+id/textViewIncomeProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/menu_glow"
                android:textStyle="bold" 
                android:text="@string/balance"/>
        </LinearLayout>
            <TextView
                android:id="@+id/textViewIncome"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="" />    
      
   </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imageButtonFixedExpenses"
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:background="@color/menu_glow"
            android:src="@drawable/fixedexp" />

        <LinearLayout
            android:id="@+id/linearLayout21"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textViewFixedExpenseBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fixed"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/menu_glow"
                android:textStyle="bold" />
            <ProgressBar
                android:id="@+id/progressBarFixedExpenses"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="162dp"
                android:layout_height="wrap_content" 
                android:progressDrawable="@drawable/incomeprogressbar"/>
             <TextView
                android:id="@+id/textViewFixedExpProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/menu_glow"
                android:textStyle="bold" 
                android:text="@string/balance"/>
        </LinearLayout>
<TextView
                android:id="@+id/textViewFixedExpense"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="" />
   </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/linearLayout2"
                android:layout_marginTop="31dp"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/imageButtonVariableExpenses"
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:background="@color/menu_glow"
                    android:src="@drawable/variable" />

                <LinearLayout
                    android:id="@+id/linearLayout31"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.02"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textViewVariableExpenseBanner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/variable"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/menu_glow"
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/progressBarVariableExpenses"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="162dp"
                        android:layout_height="wrap_content" 
                        android:progressDrawable="@drawable/incomeprogressbar"/>

                    <TextView
                        android:id="@+id/textViewVariableExpProgress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
		                android:textColor="@color/menu_glow"
		                android:textStyle="bold" 
                        android:text="@string/balance"/>
                </LinearLayout>

				<TextView
                android:id="@+id/textViewVariableExpense"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="" />
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="60dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textViewActualVariableExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/variable"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/menu_glow"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextActualVExpenses"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:ems="10"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonSetActuals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:shadowColor="@color/version_bkgrd"
                android:text="Apply Limits"
                android:textStyle="italic" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textViewActualFixedExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fixed"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/menu_glow"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextActualFExpenses"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:ems="10"
                    android:inputType="numberDecimal" />
            </LinearLayout>
        
</RelativeLayout>
</ScrollView>